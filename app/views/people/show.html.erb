<nav class="px-6 py-4 bg-pink-600">
  <%= link_to "Danh sách người", people_path %>
</nav>
<br />
<header class="py-4 px-6">
  <h1 class="font-bold text-3xl"><%= @person.display_name %> <span class="text-base text-gray-500">(<%= @person.native_name %>)</span></h1>
</header>
<div class="py-4 px-6 grid grid-cols-3 gap-x-8">
  <div class="col-span-1">
    <%= image_tag @person.portrait_file_name %>
  </div>
  <div class="col-span-2">
    <p class="my-4"><%= @person.short_bio %></p>
    <section class="my-4"> 
    <header class="my-2">
    <h2 class="font-bold text-2xl">Movies</h2>
    </header>
    <ul>
      <% @persons_roles.each do |role| %>
        <li>
            <header>
                <a class="text-pink-300" href="<%= movie_path(role.in_movie) %>">
                    <%= role.in_movie.translated_title %>
                </a>
          </header>
          <div>
            <p><%= role.in_movie.year %></p>
            <p><%= role.role_type %></p>
          </div>
        </li>
      <% end %>
    </ul>
    </section>
    <nav>
      <%= link_to 'Sửa', edit_person_path(@person) %>
      <%= link_to "Xóa", person_path(@person), method: :delete,  data: { confirm: 'Thao tác này không thể hoàn tác, bạn có chắc muốn xóa phim này?'} %>
    </nav>
  </div>
</div>